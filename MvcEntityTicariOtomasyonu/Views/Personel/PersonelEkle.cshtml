@model MvcEntityTicariOtomasyonu.Models.Tablolar.Personel
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>


@using (Html.BeginForm("PersonelEkle", "Personel", FormMethod.Post))
{
    <div style="margin-top:30px;">

        @Html.LabelFor(x => x.PersonelAd)
        @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form form-control" })

        @Html.LabelFor(x => x.PersonelSoyad)
        @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form form-control" })

        @Html.LabelFor(x => x.PersonelYas)
        @Html.TextBoxFor(x => x.PersonelYas, new { @class = "form form-control" })

        @Html.LabelFor(x => x.PersonelTelefon)
        @Html.TextBoxFor(x => x.PersonelTelefon, new { @class = "form form-control" })

        @Html.LabelFor(x => x.PersonelMail)
        @Html.TextBoxFor(x => x.PersonelMail, new { @class = "form form-control" })

        @Html.LabelFor(x => x.PersonelGörsel)
        @Html.TextBoxFor(x => x.PersonelGörsel, new { @class = "form form-control" })
        @*<input type="file" name="PersonelGorsel" /><br /><br />*@

        @Html.LabelFor(x => x.Durum)
        @Html.TextBoxFor(x => x.Durum, new { @class = "form form-control" })

        @Html.LabelFor(x => x.Departman)
        @Html.DropDownListFor(x => x.DepartmanId, (List<SelectListItem>)ViewBag.sec, "Departman Seçiniz", new { @class = "form form-control" })

        <button class="btn btn-primary" style="margin-top:15px;" id="ekle">EKLE</button>
        @*<a href="/Personel/PersonelListe"class="btn btn-danger" style="background-color:#921818;margin-top:15px;">İPTAL</a>*@

    </div>
}
<br />
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    $('#ekle').click(function () {
        swal("Personel Eklendi", "success");
    });
</script>

