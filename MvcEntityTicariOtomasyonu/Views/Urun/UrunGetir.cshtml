@model MvcEntityTicariOtomasyonu.Models.Tablolar.Urun
@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UrunGuncelle", "Urun", FormMethod.Post))
{
<div style="margin-top:30px;">

    @Html.HiddenFor(x=>x.UrunId)
    @Html.LabelFor(x => x.UrunAd)
    @Html.TextBoxFor(x => x.UrunAd, new { @class = "form form-control" })

    @Html.LabelFor(x => x.UrunMarka)
    @Html.TextBoxFor(x => x.UrunMarka, new { @class = "form form-control" })

    @Html.LabelFor(x => x.Stok)
    @Html.TextBoxFor(x => x.Stok, new { @class = "form form-control" })

    @Html.LabelFor(x => x.AlisFiyati)
    @Html.TextBoxFor(x => x.AlisFiyati, new { @class = "form form-control" })

    @Html.LabelFor(x => x.SatisFiyati)
    @Html.TextBoxFor(x => x.SatisFiyati, new { @class = "form form-control" })

    @Html.LabelFor(x => x.UrunGorsel)
    @Html.TextBoxFor(x => x.UrunGorsel, new { @class = "form form-control" })

    @Html.LabelFor(x => x.Kategori.KategoriId)
    @Html.DropDownListFor(x => x.KategoriId, (List<SelectListItem>)ViewBag.dgr, new { @class = "form form-control" })
    @*@Html.TextBoxFor(x => x.KategoriId, new { @class = "form form-control" })*@

    @Html.LabelFor(x => x.Durum)
    @Html.TextBoxFor(x => x.Durum, new { @class = "form form-control" })

    <button class="btn btn-success" style="margin-top:15px;">GÜNCELLE</button>

</div>
}
