@model MvcEntityTicariOtomasyonu.Models.Tablolar.SatisHareket
@{
    ViewBag.Title = "SatisGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



@using (Html.BeginForm("SatisGuncelle", "Satis", FormMethod.Post))
{
<div style="margin-top:30px;">

    @Html.HiddenFor(x => x.SatisId)

    @Html.Label("Personel Ad Soyad")
    @Html.DropDownListFor(x => x.PersonelId, (List<SelectListItem>)ViewBag.sec, "Personel Seçiniz", new { @class = "form form-control" })


    @Html.Label("Cari Ad Soyad")
    @Html.DropDownListFor(x => x.CariId, (List<SelectListItem>)ViewBag.sec2, "Cari Seçiniz", new { @class = "form form-control" })

    @Html.LabelFor(x => x.Urun)
    @Html.DropDownListFor(x => x.UrunId, (List<SelectListItem>)ViewBag.sec3, "Ürün Seçiniz", new { @class = "form form-control" })

    @Html.LabelFor(x => x.Adet)
    @Html.TextBoxFor(x => x.Adet, new { @class = "form form-control" })

    @Html.LabelFor(x => x.Fiyat)
    @Html.TextBoxFor(x => x.Fiyat, new { @class = "form form-control" })

    @Html.LabelFor(x => x.ToplamTutar)
    @Html.TextBoxFor(x => x.ToplamTutar, new { @class = "form form-control" })

    @Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form form-control" })

    @Html.LabelFor(x => x.Durum)
    @Html.TextBoxFor(x => x.Durum, new { @class = "form form-control" })

    <button class="btn btn-success" style="margin-top:15px;">GÜNCELLE</button>

</div>
}