@using MvcEntityTicariOtomasyonu.Models.Tablolar
@model List<KargoAyinti>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Kargolar", FormMethod.Get))
{
    <p>
        <input value="Kargo Kodu Ara" type="submit" />
        @Html.TextBox("ara")
    </p>
}
<table class="table table-bordered" style="margin-top:30px;">
    <tr>
        <th>KOD</th>
        <th>AÇIKLAMA</th>
        <th>PERSONEL</th>
        <th>MÜŞTERİ</th>
        <th>TARİH</th>
        <th>SİL</th>
        <th>AYRINTI</th>
    </tr>

    @foreach (var kargo in Model)
    {
        <tr>
            @Html.Hidden(kargo.KargoAyrintiId.ToString())
            <td>@kargo.KargoKodu</td>
            <td>@kargo.KargoAciklama</td>
            <td>@kargo.KargoPersonel</td>
            <td>@kargo.KargoMüsteri</td>
            <td>@kargo.Tarihi</td>
            <td><a href="/Kargolar/KargoSil/@kargo.KargoAyrintiId" class="btn btn-danger">SİL</a></td>
            <td><a href="/Kargolar/KargoyuTakipEt/@kargo.KargoKodu" class="btn btn-danger" style="background-color: darkorchid; color:white;">AYRINTILAR</a></td>
        </tr>
    }
</table>
<a href="/Kargolar/KargoEkle" class="btn btn-primary">KARGO EKLE</a>


